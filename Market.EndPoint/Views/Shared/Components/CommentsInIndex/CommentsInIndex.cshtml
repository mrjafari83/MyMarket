@using Application.Common.Dto
@model ResultGetAllCommentsDto

<div class="col s12 m12 l6">
    <div class="card">
        <div class="card-content">
            <h5 class="card-title">آخرین کامنت های @ViewBag.CategiryType</h5>
            <div class="comment-widgets scrollable ps ps--theme_default ps--active-y ps--active-x" style="height:560px;" data-ps-id="e030b43c-3c38-97be-b507-e3897af0ebf5">
                @foreach (var item in Model.Comments)
                {
                    <!-- Comment Row -->
                    <div class="d-flex flex-row comment-row">
                        <div class="p-2"><img src="@item.ImageSrc" alt="user" width="50" class="circle"></div>
                        <div class="comment-text w-100">
                            <h6 class="font-medium">@item.Name</h6>
                            <span class="m-b-15 db">@item.Text</span>
                            <div class="comment-footer">
@*                                <span class="action-icons">
                                    <a href="javascript:void(0)"><i class="ti-pencil-alt"></i></a>
                                    <a href="javascript:void(0)"><i class="ti-check"></i></a>
                                    <a href="javascript:void(0)"><i class="ti-heart"></i></a>
                                </span>*@
                            </div>
                        </div>
                    </div>
                }

                <div class="ps__scrollbar-x-rail" style="left: -50px; bottom: 0px; width: 498px;"><div class="ps__scrollbar-x" tabindex="0" style="left: 0px; width: 452px;"></div></div><div class="ps__scrollbar-y-rail" style="top: 0px; height: 560px; right: 542px;"><div class="ps__scrollbar-y" tabindex="0" style="top: 0px; height: 422px;"></div></div>
            </div>
        </div>
    </div>
</div>
