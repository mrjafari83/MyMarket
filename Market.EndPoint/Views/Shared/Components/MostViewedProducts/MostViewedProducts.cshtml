@{
    ViewData["Title"] = "MostViewedProducts";
    Layout = null;
}

@using Common.Dto
@model ResultGetProductByFilterDto

<div class="row featured-items blocks-spacer">
    <div class="span12">

        <!--  ==========  -->
        <!--  = Title =  -->
        <!--  ==========  -->
        <div class="main-titles lined">
            <h2 class="title">پربازدیدترین محصولات</h2>
        </div>
    </div>

    <div class="span12">
        <!--  ==========  -->
        <!--  = Carousel =  -->
        <!--  ==========  -->
        <div class="carouFredSel" data-autoplay="false" data-nav="featuredItems">
            <div class="slide">
                <div class="row">

                    @if (Model.Products.Count() != 0)
                    {
                        @foreach (var item in Model.Products)
                        {
                            <!--  ==========  -->
                            <!--  = Product =  -->
                            <!--  ==========  -->
                            <div class="span4">
                                <div class="product">
                                    <div class="product-img featured">
                                        <div class="picture">
                                            <img src="@item.Image" alt="" width="518" height="358" />
                                            <div class="img-overlay">
                                                <a href="/Product?id=@item.Id" class="btn more btn-primary">توضیحات بیشتر</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="main-titles">
                                        <h4 class="title">@item.Price</h4>
                                        <h5 class="no-margin">@item.Name</h5>
                                    </div>
                                    <p class="desc">@item.ShortDescription</p>
                                    <p class="center-align stars">
                                        <span class="icon-star stars-clr"></span>
                                        <span class="icon-star stars-clr"></span>
                                        <span class="icon-star stars-clr"></span>
                                        <span class="icon-star stars-clr"></span>
                                        <span class="icon-star stars-clr"></span>

                                    </p>
                                </div>
                            </div> <!-- /product -->
                        }
                    }

                </div>
            </div>
        </div> <!-- /carousel -->
    </div>

</div>

