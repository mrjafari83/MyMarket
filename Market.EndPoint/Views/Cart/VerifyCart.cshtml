@using Application.Services.Client.Carts.Queries.GetUserCart
@model GetUserCartDto 
@{
    Layout = null;

    int TotalPrice = 0;
    foreach (var item in Model.Products)
    {
        TotalPrice += item.Price * item.Count;
    }
}

