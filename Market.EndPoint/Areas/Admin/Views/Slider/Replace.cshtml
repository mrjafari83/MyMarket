@{
    ViewData["Title"] = "Replace";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-content">
                <form class="formValidate" id="formValidate" novalidate="novalidate" method="post" action="/Admin/Slider/Replace" enctype="multipart/form-data">
                    <div class="row">
                        <div class="input-field col s12">
                            <label for="url" class="">مسیر(url)*</label>
                            <input id="url" name="url" type="url" data-error=".errorTxt1">
                            <div class="errorTxt1"></div>
                        </div>
                        <div class="input-field col s12 file-field">
                            <div class="btn cyan">
                                <span>تصویر</span>
                                <input type="file" id="image" name="image" data-error=".errorTxt2">
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text">
                            </div>
                            <div class="errorTxt2"></div>
                        </div>
                        <input type="hidden" name="sliderId" value="@ViewBag.SliderId" />
                        <div class="input-field col s12">
                            <button class="btn waves-effect waves-light right submit green" type="submit" name="action">افزودن</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

